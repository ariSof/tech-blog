<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div id="signup-box" class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
              <p class="text-white-50 mb-5">Please enter your Username and Password</p>
              <form class="signup-form">
                <div class="form-outline form-white mb-4" data-mdb-input-init>
                  <input type="name" id="name-signup" class="form-control form-control-lg" />
                  <label class="form-label" for="name-signup">Username</label>
                </div>
                <div class="form-outline form-white mb-4" data-mdb-input-init>
                  <input type="email" id="email-signup" class="form-control form-control-lg" />
                  <label class="form-label" for="email-signup">Email</label>
                </div>

                <div class="form-outline form-white mb-4" data-mdb-input-init>
                  <input type="password" id="password-signup" class="form-control form-control-lg" />
                  <label class="form-label" for="password-signup">Password</label>
                </div>

                <button class=" btn btn-outline-light btn-lg px-5" type="submit">Sign Up</button>
              </form>
            </div>

            <div>
              <p class="mb-0">Already have an account? <a href="/login" class="text-white-50 fw-bold">Log In</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="./js/signup.js"></script>